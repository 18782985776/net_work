<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_height="45dp"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <com.jobnew.farm.widget.ClearEditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/login_icon_number"
                android:drawablePadding="20dp"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/c_txt_68"
                android:textColorHint="@color/c_txt_88"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
        <View style="@style/divider_normal"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <com.jobnew.farm.widget.ClearEditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:background="@null"
                android:textSize="@dimen/text_size_14"
                android:inputType="textPassword"
                android:textColorHint="@color/c_txt_88"
                android:textColor="@color/c_txt_68"
                android:hint="请输入密码"
                android:maxLength="15"
                android:drawableLeft="@mipmap/login_icon_password"/>
            <RelativeLayout
                android:id="@+id/rl_eye"
                android:visibility="gone"
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/img_eye"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/mine_icon_delete3"/>
            </RelativeLayout>

        </LinearLayout>
        <View style="@style/divider_normal"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"/>
        <!-- 登录 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bg_btn_select"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_forget_pwd"
            android:layout_width="wrap_content"
            android:text="忘记密码"
            android:clickable="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/c_txt_88"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:text="立即注册"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/c_txt_88"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <View
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/c_txt_68"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.5dp"/>
        <TextView
            android:text="第三方账号登陆"
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/c_txt_68"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_qq"
            android:src="@mipmap/login_icon_qq"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <View
            android:layout_width="40dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/img_weixing"
            android:src="@mipmap/login_icon_weixin"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <View
            android:layout_width="40dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/img_weibo"
            android:src="@mipmap/login_icon_weibo"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>
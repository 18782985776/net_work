<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jobnew.farm.module.home.activity.MyFarmHappyOrderActivity">
    <include layout="@layout/layout_title_bar"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tablayout"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextAppearance="@style/MyTab"
        app:tabTextColor="@color/c_txt_68"
        android:layout_height="40dp"></android.support.design.widget.TabLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/line"

        android:layout_height="10dp"/>
<android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_abort_us"
        android:layout_width="match_parent"
        android:background="@drawable/bg_select"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_height="wrap_content" />
        <View
            style="@style/divider_normal"  android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bind_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_select">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="绑定手机"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:src="@mipmap/ic_more" />
        <TextView
            android:id="@+id/txt_num_phone"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/img"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="未绑定"
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_12" />
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/txt_num_phone"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="158****1234"
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_12" />
        <View
            style="@style/divider_normal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_select">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="修改密码"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:src="@mipmap/ic_more" />

        <View
            style="@style/divider_normal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clear"
        android:layout_width="match_parent"
        android:background="@drawable/bg_select"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="清除缓存"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_height="wrap_content" />
        <View
            style="@style/divider_normal"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_out_app"
        android:layout_width="match_parent"
        android:background="@drawable/bg_select"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="退出帐号"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/divider_normal"
        android:layout_height="match_parent"
        />
</LinearLayout>
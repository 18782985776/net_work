<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.jobnew.farm.module.personal.activity.MyCollectionActivity">
    <include layout="@layout/layout_title_bar"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/tab_cpllection"
        android:layout_height="42dp"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/main_color"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextAppearance="@style/MyTab"
        app:tabTextColor="@color/c_txt_68"/>
<View
    android:layout_width="match_parent"
    android:background="#e3e3e3"
    android:layout_height="11dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewPager_collection"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>

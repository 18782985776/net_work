<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_insurance_select"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/left_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_cb1"/>
        <TextView
            android:id="@+id/tv_insurance_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_insurance_select"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            style="@style/style_tv_25"
            android:text="基础保障"
            />
        <TextView
            android:id="@+id/tv_insurance_unit_prive"
            style="@style/style_tv_68"
            android:textColor="@color/c_txt_88"
            android:layout_toRightOf="@id/tv_insurance_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="¥1.00/㎡"/>
        <TextView
            android:id="@+id/tv_insurance_price"
            android:textSize="14sp"
            style="@style/style_tv_price"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="¥20.00"/>
       

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        style="@style/split_line_style"/>
    <TextView
        android:id="@+id/tv_insurance_describe"
        style="@style/style_tv_68"
        android:gravity="center_vertical"
        android:paddingLeft="38dp"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/right_margin"
        android:paddingBottom="14dp"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:text="1.这里是用户租赁土地或者购买动物养殖，获得的农场 的基础保障条例，比如动物被农场弄丢了啊，死了啊等 等获得的赔偿等。" />
    <View
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        style="@style/split_line_style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_compensation_ratio"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            style="@style/style_tv_68"
            android:text="20"/>
        <TextView
            android:layout_toLeftOf="@id/tv_compensation_ratio"
            android:layout_marginRight="@dimen/right_margin"
            style="@style/style_tv_68"
            android:text="赔偿比例:" />
    </RelativeLayout>

</LinearLayout>
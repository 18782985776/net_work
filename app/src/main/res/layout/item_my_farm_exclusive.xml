<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">


    <View style="@style/split_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_farm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:src="@mipmap/ic_default" />

        <TextView
            android:id="@+id/tv_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/c_txt_25"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text=">"
            android:textColor="@color/c_txt_25"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c_txt_25"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/farm_icon_phone" />
    </LinearLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <ImageView
            android:id="@+id/iv_land"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:src="@mipmap/default_image" />

        <!--中间-->

        <TextView
            android:id="@+id/tv_land_unit_price_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/iv_land"
            android:text="租赁价格"
            android:textColor="@color/c_txt_68"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_land_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_land_unit_price_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_land_unit_price_name"
            android:text="0元/㎡/月"
            android:textColor="@color/c_txt_68"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_land_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_land_unit_price_name"
            android:layout_below="@id/tv_land_unit_price_name"
            android:layout_marginTop="10dp"
            android:text="土地面积"
            android:textColor="@color/c_txt_68"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_land_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_land_area_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_land_area_name"
            android:text="0㎡"
            android:textColor="@color/c_txt_68"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_land"
            android:layout_alignLeft="@id/tv_land_area_name"
            android:layout_marginBottom="2dp"
            android:drawableLeft="@mipmap/farm_icon_address1"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="@color/c_txt_68"
            android:textSize="12sp" />

        <!--右边-->
        <TextView
            android:id="@+id/tv_record"
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/right_margin"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_select_yes2"
            android:gravity="center"
            android:text="档案"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_address"
            android:layout_marginRight="@dimen/right_margin"
            android:text="距离 0 km" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="有效日期："
            android:textColor="@color/c_txt_88"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/c_txt_88"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
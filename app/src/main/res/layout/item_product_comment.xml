<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rund_img1"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@null" />

        <TextView
            android:id="@+id/key_word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="关键词"
            android:textColor="@color/c_txt_38"
            android:textSize="@dimen/text_size_13" />

        <com.jobnew.farm.widget.StatusBarView
            android:id="@+id/star_view1"
            android:layout_width="62dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/key_word1"
            star:isEdit="false"
            star:margin="3"
            star:score="4" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-4-19"
            android:id="@+id/tv_date"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:textSize="@dimen/text_size_13"
        android:id="@+id/tv_content"
        android:textColor="@color/c_txt_68"
        android:text="智慧农场真的是不错啊，自己种植的蔬菜，吃起来味道 都不一样，完全无添加"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="30dp" />

    <LinearLayout
        android:id="@+id/picture_linear1"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:id="@+id/show_img1"
            android:layout_height="96dp" />
        <View
            android:layout_width="12dp"
            android:layout_height="96dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:id="@+id/show_img2"
            android:layout_height="96dp" />
        <View
            android:layout_width="12dp"
            android:layout_height="96dp"/>
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/show_img3"
            android:src="@drawable/ic_launcher"
            android:layout_weight="1"
            android:layout_height="96dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ll_shopper_reply"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical|left"
           android:text="店主："
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_13"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/c_txt_68"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_vertical|left"
            android:id="@+id/tv_shopper_reply"
            android:layout_height="40dp" />
    </LinearLayout>


    <View style="@style/one_dp_split_line_style"/>
</LinearLayout>
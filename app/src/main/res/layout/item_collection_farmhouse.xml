<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_farm_happy"
    android:layout_height="102dp">

    <LinearLayout
        android:id="@+id/farmlistview_item_layout"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/farmhouse_img"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:scaleType="centerCrop"
            android:src="@drawable/farm_picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/farmhouse_nametv"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="谢家农家乐"
                    android:textColor="#383938"
                    android:textSize="@dimen/text_size_15" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.jobnew.farm.utils.StarLinearLayout xmlns:star="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/star_score"
                        android:layout_width="62dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        star:isEdit="false"
                        star:margin="3"
                        star:score="4" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:id="@+id/introduce_tv"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="特色：烤全羊，钓鱼，棋牌等环境优 雅，交通方便"
                    android:textColor="@color/c_txt_38"
                    android:textSize="@dimen/text_size_12" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/farm_icon_address1" />

                <TextView
                    android:id="@+id/farmAdreestv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="成都市高新区天赋二街蜀都中心"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_12" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="距离1000km"
                    android:id="@+id/distance_tv"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/c_txt_68"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#e3e3e3"
        android:layout_height="1dp"/>
</LinearLayout>
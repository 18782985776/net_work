<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="41dp">
            <ImageView
                android:layout_width="31dp"
                android:id="@+id/rund_img1"
                android:layout_height="31dp" />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:id="@+id/key_word1"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/c_txt_38"
                android:layout_height="wrap_content" />
            <com.jobnew.farm.widget.StatusBarView
                android:layout_width="62dp"
                android:layout_marginLeft="10dp"
                star:margin="3"
                star:isEdit="false"
                star:score="4"
                android:id="@+id/star_view1"
                android:layout_toRightOf="@+id/key_word1"
                android:layout_height="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/c_txt_88"

                android:id="@+id/date_tv1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:id="@+id/describe_tv1"
            android:textSize="@dimen/text_size_13"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/c_txt_68"
            android:text=""
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/picture_linear1"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/show_img1"
                android:layout_height="96dp" />
            <View
                android:layout_width="12dp"
                android:layout_height="96dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/show_img2"
                android:layout_height="96dp" />
            <View
                android:layout_width="12dp"
                android:layout_height="96dp"/>

            <ImageView
                android:id="@+id/show_img3"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_height="36dp">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/c_txt_68"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/manager_comment_back1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/one_dp_split_line_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/item2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="41dp">
            <ImageView
                android:layout_width="31dp"
                android:id="@+id/rund_img2"
                android:layout_height="31dp" />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"

                android:id="@+id/key_word2"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/c_txt_38"
                android:layout_height="wrap_content" />
            <com.jobnew.farm.widget.StatusBarView
                android:layout_width="62dp"
                android:layout_marginLeft="10dp"
                star:margin="3"
                star:isEdit="false"
                star:score="4"
                android:id="@+id/star_view2"
                android:layout_toRightOf="@+id/key_word1"
                android:layout_height="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/c_txt_88"
                android:text="2017-4-19"
                android:id="@+id/date_tv2"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:id="@+id/describe_tv2"
            android:textSize="@dimen/text_size_13"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/c_txt_68"
            android:text=""
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="30dp" />

        <LinearLayout
            android:id="@+id/picture_linear2"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/show_img4"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                />

            <View
                android:layout_width="12dp"
                android:layout_height="96dp" />

            <ImageView
                android:id="@+id/show_img5"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                />

            <View
                android:layout_width="12dp"
                android:layout_height="96dp" />

            <ImageView
                android:id="@+id/show_img6"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_height="36dp">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/c_txt_68"
                android:textSize="@dimen/text_size_13"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/manager_comment_back2"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/one_dp_split_line_style"/>
    </LinearLayout>
 
    
</LinearLayout>
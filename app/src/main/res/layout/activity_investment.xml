<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="47dp">
        <TextView
            android:id="@+id/txt_hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="@dimen/margin_12"
            android:text="您的称呼"/>
        <com.jobnew.farm.widget.ClearEditText
            android:id="@+id/edt_name"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/txt_hh"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="34dp"
            android:background="@null"
            android:textColor="@color/c_txt_68"
            android:textColorHint="@color/c_txt_88"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="请输入您的称呼"/>
    </RelativeLayout>
    <View style="@style/divider_normal" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="47dp">
        <TextView
            android:id="@+id/txt_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="@dimen/margin_12"
            android:text="联系方式"/>
        <com.jobnew.farm.widget.ClearEditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/txt_p"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:maxLength="11"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_marginLeft="34dp"
            android:background="@null"
            android:textColor="@color/c_txt_68"
            android:textColorHint="@color/c_txt_88"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="请输入联系方式"/>
    </RelativeLayout>
    <View style="@style/divider_normal"
        android:layout_height="@dimen/margin_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:text="详细说明"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_detail"
            android:layout_width="match_parent"
            android:padding="@dimen/margin_10"
            android:inputType="text"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_12"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/c_txt_68"
            android:textColorHint="@color/c_txt_88"
            android:maxLength="300"
            android:gravity="top"
            android:hint="输入您的信息以及想法或建议"
            android:background="@drawable/bg_color_bg"
            android:layout_height="200dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginTop="25dp"
            android:textColor="@color/c_txt_38"
            android:textSize="@dimen/text_size_12"
            android:text="如果您对我们的产品有合作意向，请联系我们吧！"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:background="@drawable/bg_btn_select"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_height="45dp" />
</LinearLayout>
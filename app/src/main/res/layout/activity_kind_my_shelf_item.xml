<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="61dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:text="大白菜"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/c_txt_38"
            android:textSize="@dimen/text_size_14"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_title_farm"
            android:layout_below="@+id/txt_title"
            android:layout_width="wrap_content"
            android:text="大石开心农场"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_14"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:text="¥ 2.5"
                android:textColor="@color/other_red"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_price_unit"
                android:layout_width="wrap_content"
                android:text="/kg"
                android:textColor="@color/c_txt_68"
                android:textSize="@dimen/text_size_12"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:textColor="@color/c_txt_88"
            android:text="距离 15KM"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_13"
            android:layout_below="@+id/ll_money"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View style="@style/divider_normal"/>
</LinearLayout>
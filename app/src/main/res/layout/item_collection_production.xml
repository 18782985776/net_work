<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="102dp">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/collection_farmhouse"
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:id="@+id/collection_farmhouse_img"
            android:scaleType="centerCrop"
            android:src="@drawable/farm_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="自种大白菜"
                    android:textColor="@color/c_txt_38"
                    android:textSize="@dimen/text_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="￥"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="@dimen/text_size_11"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="50"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="@dimen/text_size_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/unitName"
                    android:text="/kg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/c_txt_68"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/describe_tv"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center"
                    android:text="高级爽口大白菜，高级爽口大白菜"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stole_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="bottom|left"
                    android:text="商品库存 132"
                    android:textColor="@color/c_txt_88"
                    android:textSize="@dimen/text_size_11" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="#e3e3e3" />

                <TextView
                    android:id="@+id/saler_Tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="bottom|center_horizontal"
                    android:text="月售 22"
                    android:textColor="@color/c_txt_88"
                    android:textSize="@dimen/text_size_11" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="#e3e3e3" />

                <TextView
                    android:id="@+id/discussTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/c_txt_88"
                    android:text="评论 230"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e3e3e3"
        android:layout_height="1dp"/>
</LinearLayout>
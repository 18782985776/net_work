<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jobnew.farm.module.farm.activity.farmActivity.ProductSureOrderActivity">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:background="@mipmap/farm_icon_address2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="收货人："
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tt"
                    android:gravity="center_vertical"
                    android:text="关键字"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="18782985776"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="四川省成都是武侯区天府二街138号蜀都中心1栋3 单元2204号"
                android:textColor="@color/c_txt_68"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:src="@mipmap/ic_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_farm"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jobnew.farm.widget.RundImageView
            android:id="@+id/img_farm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="凤凰山农场"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="自种大白菜"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_unitName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="/kg" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_unitName"
                    android:gravity="center_vertical"
                    android:text="8.00"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="@dimen/text_size_11" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="高级爽口大白菜，高级爽口大白菜高级 爽口大白菜"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_product_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/dd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_product_num"
                    android:gravity="center_vertical"
                    android:text="数量："
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:padding="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="购买数量"
            android:textColor="@color/c_txt_68"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reduce_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/farm_button_reduce" />

            <View
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/num_tv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/c_txt_88"
                android:textSize="@dimen/text_size_13" />

            <View
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/increase_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/farm_button_increase" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="合计："
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/c_txt_F8"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="300.00"
            android:textColor="@color/c_txt_F8"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_post_cost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="（含运费：¥0.00）"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="合计："
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/c_txt_F8"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_total_price2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="300.00"
            android:textColor="@color/c_txt_F8"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>

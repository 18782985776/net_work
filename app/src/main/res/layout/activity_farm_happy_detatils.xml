<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/layout_title_bar"/>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:layout_width="match_parent"
                    android:id="@+id/farm_happy_banner"
                    app:canLoop="true"
                    android:layout_height="171dp"></com.bigkoo.convenientbanner.ConvenientBanner>
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/semicircle_background_shape"
                    android:orientation="horizontal"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_12"
                        android:text="星级"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <com.jobnew.farm.utils.StarLinearLayout
                        xmlns:star="http://schemas.android.com/apk/res-auto"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/farm_happy_star"
                        android:layout_width="62dp"
                        android:layout_height="10dp"
                        star:isEdit="false"
                        star:score="4"
                        star:margin="3"
                        ></com.jobnew.farm.utils.StarLinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:background="#7f000000"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_showlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:drawableLeft="@mipmap/farm_icon_address2"
                        android:gravity="center_vertical"
                        android:text="成都市高新区天赋二街蜀都中心1号楼138号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:text="距离 8KM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <View
                            android:layout_width="1dp"
                            android:background="@color/white"
                            android:layout_height="12dp"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/img_call"
                            android:layout_height="15dp"
                            android:src="@mipmap/farm_icon_phone"/>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
          
        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:background="#00000000"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/plant_rl"
                    android:clickable="true"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="餐饮"
                        android:id="@+id/tv_cating_filter"
                        android:checked="true"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_toRightOf="@+id/tv_cating_filter"
                        android:textColor="@color/white"
                        android:text="主"
                        android:layout_marginTop="7dp"
                        android:visibility="gone"
                        android:id="@+id/tv_plant_main_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_plant"
                        android:background="#90B659"
                        android:layout_height="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:clickable="true"
                    android:id="@+id/rasie_rl"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/tv_chess_and_card_filter"
                        android:text="棋牌"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_chess_and_card_filter"
                        android:layout_height="14dp"
                        android:textColor="@color/white"
                        android:text="主"
                        android:visibility="gone"
                        android:id="@+id/tv_raise_main_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_rasie"
                        android:visibility="gone"
                        android:background="#90B659"
                        android:layout_height="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:id="@+id/product_rl"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="钓鱼"
                        android:id="@+id/tv_finish_filter"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_finish_filter"
                        android:layout_height="14dp"
                        android:textColor="@color/white"
                        android:text="主"
                        android:visibility="gone"
                        android:id="@+id/tv_main_product_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_product"
                        android:visibility="gone"
                        android:background="#90B659"
                        android:layout_height="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/activity_rl"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="娱乐"
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_activity_filter"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_activity_filter"
                        android:textColor="@color/white"
                        android:text="主"
                        android:visibility="gone"
                        android:id="@+id/tv_main_activity_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_activity"
                        android:background="#90B659"
                        android:visibility="gone"
                        android:layout_height="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/cateing_rl"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="选项5"
                        android:id="@+id/tv_five_filter"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_five_filter"
                        android:layout_height="14dp"
                        android:textColor="@color/white"
                        android:text="主"
                        android:visibility="gone"
                        android:id="@+id/tv_main_catering_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_catering"
                        android:background="#90B659"
                        android:visibility="gone"
                        android:layout_height="4dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:id="@+id/hotel_rl"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="选项6"
                        android:id="@+id/tv_six_filter"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/tab_selector_text_farm_details"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/tv_six_filter"
                        android:layout_height="14dp"
                        android:textColor="@color/white"
                        android:text="主"
                        android:visibility="gone"
                        android:id="@+id/tv_main_hotel_tag"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_8"
                        android:background="@drawable/plant_tag_background"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/indicator_stay"
                        android:visibility="gone"
                        android:background="#90B659"
                        android:layout_height="4dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="#E3E3E3"
                android:layout_marginTop="41dp"
                />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
  <FrameLayout
      android:layout_width="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      android:layout_height="match_parent">
          <android.support.v7.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/farm_happy_recycle"
              ></android.support.v7.widget.RecyclerView>

      <include layout="@layout/layout_easy_status_view"/>
  </FrameLayout>




</android.support.design.widget.CoordinatorLayout>

</LinearLayout>

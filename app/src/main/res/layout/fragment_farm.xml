<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/farm_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:id="@+id/tv_ranking_filter"
            android:textColor="@color/tab_selector_text_farm"
            android:text="综合排序"
            android:textSize="@dimen/text_size_14"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textAlignment="center"
            android:id="@+id/tv_hot_filter"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:text="人气"
            android:textColor="@color/tab_selector_text_farm"
            android:textSize="@dimen/text_size_14" />
        <ImageView
            android:layout_width="5dp"
            android:id="@+id/hot_img"
            android:src="@drawable/hot_selecotr"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="距离"
            android:textColor="@color/tab_selector_text_farm"
            android:id="@+id/tv_distance_filter"
            android:textSize="@dimen/text_size_14"/>
        <ImageView
            android:layout_width="5dp"
            android:id="@+id/distance_img"
            android:src="@drawable/hot_selecotr"
            android:layout_height="10dp" />
    </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/tab_selector_text_farm"
                android:id="@+id/tv_super_filter"
                android:text="高级筛选"
                android:textSize="@dimen/text_size_14"/>
            <ImageView
                android:layout_width="9dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/super_img"
                android:src="@drawable/selector_icon"
                android:layout_height="9dp" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#E3E3E3"
        android:layout_height="1dp"/>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:id="@+id/super_filter_menue"
    android:scrollbars="none"
    android:visibility="visible"
    android:layout_height="41dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:gravity="center"
            android:text="主营:"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img1"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_main_business_cancle"
                android:text="全部"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"

                android:id="@+id/img2"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_main_business_plant"
                android:text="种植"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"

                android:id="@+id/img3"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="养殖"
                android:id="@+id/tv_main_business_raise"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img4"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="餐饮"
                android:id="@+id/tv_main_business_catering"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img5"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="住宿"
                android:id="@+id/tv_main_business_hotel"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img6"
                android:layout_height="12dp" />
            <TextView
                android:id="@+id/tv_main_business_garden"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="活动" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img7"
                android:layout_height="12dp" />
            <TextView
                android:id="@+id/tv_main_business_product"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="农产品" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="12dp"
                android:id="@+id/img8"
                android:layout_height="12dp" />
            <TextView
                android:id="@+id/tv_main_business_other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="额外" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#E3E3E3"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <include layout="@layout/rapid_layout_refresh_load_recyclerview"/>

        <include
            layout="@layout/layout_easy_status_view" />
    </FrameLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/linear1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="45dp"
                android:gravity="center"
                android:text="人气"
                android:id="@+id/grade_tv"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="5dp"
                android:id="@+id/grade_img"
                android:src="@drawable/hot_selecotr"
                android:layout_height="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linear2"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="45dp"
                android:gravity="center"
                android:text="最新"
                android:id="@+id/newwest_tv"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="5dp"
                android:id="@+id/newwest_img"
                android:src="@drawable/hot_selecotr"
                android:layout_height="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linear3"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="45dp"
                android:gravity="center"
                android:text="距离"
                android:id="@+id/distance_filter_tv"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="5dp"
                android:id="@+id/distance_filter_img"
                android:src="@drawable/hot_selecotr"
                android:layout_height="10dp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#E3E3E3"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/rapid_layout_refresh_load_recyclerview"/>
        <include layout="@layout/layout_easy_status_view"/>
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="102dp">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/entertainment_item_layout"
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:id="@+id/entertainment_item_img"
            android:scaleType="centerCrop"
            android:src="@drawable/farm_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/entertainment_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="太平山农产野炊"
                    android:textColor="#383938"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_main_business"
                    android:layout_width="40dp"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="已报名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_join_activity"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/distanceTv"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="23km"
                    android:textColor="#888888"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>


            <TextView
                android:id="@+id/entertainmentDescribetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="私人组织活动，人均消费50元"
                android:textColor="#686868"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="￥"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:id="@+id/cost_tv"
                    android:textColor="@color/c_txt_F8"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="人数 15/20"
                    android:textColor="#888888"
                    android:layout_marginRight="15dp"
                    android:textSize="@dimen/text_size_12" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="#e3e3e3" />
                <TextView
                    android:id="@+id/dateTv"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                    android:text="日期 05-07-05-10"
                    android:textColor="#888888"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e3e3e3"
        android:layout_height="1dp"/>
</LinearLayout>
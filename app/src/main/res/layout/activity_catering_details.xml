<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
<com.bigkoo.convenientbanner.ConvenientBanner
    android:layout_width="match_parent"
    android:id="@+id/banner"
    app:canLoop="true"
    android:layout_height="171dp"></com.bigkoo.convenientbanner.ConvenientBanner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="6人营养套餐"
                android:id="@+id/name_tv"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/c_txt_38"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="￥"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/c_txt_F8"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_15"
                android:text="50.00"
                android:id="@+id/price_tv"
                android:gravity="center_vertical"
                android:textColor="@color/c_txt_F8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="更新日期 "
                android:gravity="center_vertical"
                android:textColor="@color/c_txt_88"
                android:textSize="@dimen/text_size_11"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="2017-1-18"
                android:id="@+id/tv_update_date_name"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/c_txt_88"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/c_txt_88"
                android:gravity="center_vertical"
                android:text="库存："
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="80"
                android:id="@+id/store_tv"
                android:textColor="@color/c_txt_88"
                android:textSize="@dimen/text_size_11"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/one_dp_split_line_style"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/farm_icon_address2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="成都市高新区天府二街蜀都中心1号楼138号"
            android:textColor="@color/c_txt_38"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="距离8KM"
            android:id="@+id/distance_tv"
            android:textColor="@color/c_txt_38"
            android:textSize="@dimen/text_size_11"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="12dp"
            android:background="#c1c1c1"
            android:layout_height="11dp"/>
        <ImageView
            android:layout_width="30dp"
            android:padding="7dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:id="@+id/img_call"
            android:src="@mipmap/farm_icon_phone"
            android:layout_height="30dp" />
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="51dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_14"
            android:text="订购数量"
            android:textColor="@color/c_txt_25"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/reduce_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/farm_button_reduce" />

            <View
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_height="26dp"/>
            <TextView
                android:layout_width="26dp"
                android:background="#f0f0f0"
                android:text="1"
                android:id="@+id/content_tv"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:layout_height="26dp" />
            <View
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_height="26dp"/>
            <ImageView
                android:layout_width="26dp"
                android:id="@+id/increase_img"
                android:background="@mipmap/farm_button_increase"
                android:layout_height="26dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/unit_tv"
            android:text="人"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/c_txt_68"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/one_dp_split_line_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="41dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="消费日期"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/c_txt_25"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2017-1-18" />

        <ImageView
            android:layout_width="6dp"
            android:background="@mipmap/farm_icon_more2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="套餐详情"
            android:textColor="@color/c_txt_25" />

        <TextView
            android:id="@+id/details_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="晚上6点开始篝火晚会哦，记得准时参加哦，记得哦！！！晚 上6点开始篝火晚会哦，记得准时参加哦，记得哦！！！"
            android:textColor="@color/c_txt_88" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#eeeeee"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:textColor="@color/c_txt_25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="￥"
            android:textColor="@color/c_txt_F8"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="300.00"
            android:textColor="@color/c_txt_F8"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/go_buy_bt"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="#9ecc58"
            android:text="立即订购"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_product_process_select"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/left_margin"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_cb1"/>
        <TextView
            android:id="@+id/tv_product_process_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_process_select"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            style="@style/style_tv_25"
            android:text="去泥清洗"
            />
        <TextView
            android:id="@+id/tv_pp_unit_prive"
            style="@style/style_tv_68"
            android:textColor="@color/c_txt_88"
            android:layout_toRightOf="@id/tv_product_process_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="¥1.00/㎡"/>
        <TextView
            android:id="@+id/tv_pp_price"
            style="@style/style_tv_price"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="¥20.00"/>
       

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        style="@style/split_line_style"/>
    <TextView
        android:id="@+id/tv_pp_describe"
        style="@style/style_tv_68"
        android:gravity="center_vertical"
        android:paddingLeft="38dp"
        android:paddingTop="10dp"
        android:paddingRight="@dimen/right_margin"
        android:paddingBottom="14dp"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:text="去泥清洗，就是收获以后了帮你把产品的泥土去掉清洗干 净，然后在包装发货" />

</LinearLayout>
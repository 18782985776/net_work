<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="102dp">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/item_farm_happy_details"
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <ImageView
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:id="@+id/farm_happy_img"
            android:scaleType="centerCrop"
            android:src="@drawable/farm_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/farm_happy_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:text="太平山农产野炊"
                    android:textColor="@color/c_txt_38"
                    android:textSize="@dimen/text_size_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/farm_happy_price_tv"
                    android:text="￥50/人"
                    android:gravity="top"
                    android:textColor="@color/c_txt_F8"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_size_12"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/farm_happy_describe_tv"
                    android:textColor="@color/c_txt_68"
                    android:ellipsize="end"
                    android:textSize="@dimen/text_size_12"
                    android:text="私人组织活动，人均花费50元"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/month_sale_num_tv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:text="月售"
                    android:textColor="@color/c_txt_88"
                    android:textSize="@dimen/text_size_11" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="bottom"
                    android:background="#e3e3e3" />

                <TextView
                    android:id="@+id/commentTv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal"
                    android:text="评论22"
                    android:textColor="@color/c_txt_88"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e3e3e3"
        android:layout_height="1dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_color"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/data_error_imageview"
		android:layout_width="139dp"
		android:layout_height="139dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="100dp"
		android:src="@mipmap/public_not_found" />

	<TextView
		android:id="@+id/data_error_textview"
		android:layout_width="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_height="wrap_content"
		android:layout_below="@+id/data_error_imageview"
		android:layout_marginTop="33dp"
		android:textColor="@color/c_txt_88"
		android:textSize="15dp"
		android:gravity="center"
		android:text="好像出了点问题，请稍后再试吧！"/>

	<TextView
		android:layout_width="90dp"
		android:layout_height="37dp"
		android:gravity="center"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="16dp"
		android:layout_marginTop="21dp"
		android:text="刷新"
		android:background="@drawable/bg_color_main"
		android:textColor="@color/main_color"
		android:layout_below="@+id/data_error_textview" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jobnew.farm.module.home.activity.LaunchedActivity">
    <include layout="@layout/layout_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="活动名称"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/c_txt_25"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/activity_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="输入活动名称，10个字符以内"
                    android:maxLength="10"
                    android:textColorHint="@color/c_txt_88"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="活动日期"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/startTime_ll"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/bg_button_entertainment"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:text="2017-06-08"
                        android:gravity="center"
                        android:id="@+id/startTime_tv"
                        android:textColor="@color/c_txt_38"
                        android:layout_height="29dp" />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_marginRight="9dp"
                        android:src="@mipmap/farm_icon_more3"
                        android:layout_height="7dp" />

                </LinearLayout>
                <View
                    android:layout_width="8dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:background="@color/c_txt_68"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/endTime_ll"
                    android:background="@drawable/bg_button_entertainment"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:text="2017-06-08"
                        android:gravity="center"
                        android:id="@+id/endTime_tv"
                        android:textColor="@color/c_txt_38"
                        android:layout_height="29dp" />
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_marginRight="9dp"
                        android:src="@mipmap/farm_icon_more3"
                        android:layout_height="7dp" />

                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/c_txt_25"
                    android:text="活动地址"
                    android:textSize="@dimen/text_size_14"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:hint="请输入活动地址"
                    android:layout_marginLeft="26dp"
                    android:background="#00000000"
                    android:textColor="@color/c_txt_38"
                    android:id="@+id/address_tv"
                    android:textSize="@dimen/text_size_13"
                    android:textColorHint="@color/c_txt_88"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="活动人数"
                    android:textColor="@color/c_txt_25"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_button_entertainment"
                    android:layout_marginLeft="26dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="26dp"
                        android:id="@+id/recuce_tv"
                        android:background="@mipmap/farm_button_reduce"
                        android:gravity="center"
                        android:layout_height="26dp" />
                    <View
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="26dp"/>
                    <EditText
                        android:layout_width="62dp"
                        android:text="100"
                        android:id="@+id/people_num_tv"
                        android:textSize="@dimen/text_size_13"
                        android:background="#00000000"
                        android:textColor="@color/c_txt_38"
                        android:gravity="center"
                        android:layout_height="26dp" />
                    <View
                        android:layout_width="1dp"
                        android:background="@color/white"
                        android:layout_height="26dp"/>
                    <TextView
                        android:layout_width="26dp"
                        android:id="@+id/increase_tv"
                        android:background="@mipmap/farm_button_increase"
                        android:gravity="center"
                        android:layout_height="26dp" />
                </LinearLayout>

            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="报名价格"
                    android:textColor="@color/c_txt_25"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="111dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/bg_button_entertainment"
                    android:layout_height="29dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="￥"
                        android:layout_marginLeft="21dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/c_txt_38"
                        android:textSize="@dimen/text_size_13"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/price_tv"
                        android:background="#00000000"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/c_txt_F8"
                        android:text="300元"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_height="46dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="联系电话"
                    android:textSize="14sp"
                    android:textColor="@color/c_txt_25"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/set_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:background="#00000000"
                    android:hint="请输入联系电话"
                    android:textColorHint="@color/c_txt_88"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
            <View
                style="@style/one_dp_split_line_style" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="151dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="活动描述"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_height="45dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bg_try"
                    android:gravity="start"
                    android:hint="输入您的信息以及想法或建议"
                    android:padding="11dp"
                    android:textColorHint="@color/c_txt_88"
                    android:textSize="@dimen/text_size_13" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/line_color"
                android:layout_height="11dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:text="活动图片"
                android:textColor="@color/c_txt_25"
                android:textSize="@dimen/text_size_13"
                android:gravity="center_vertical"
                android:layout_height="46dp" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:id="@+id/myRecycle_view"
                android:layout_height="186dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="提交"
        android:textSize="@dimen/text_size_14"
        android:background="@color/btn_bg_color"
        android:layout_height="46dp" />
  
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/convenientBanner"
                        android:layout_width="match_parent"
                        android:layout_height="171dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        app:canLoop="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_land_name"
                            style="@style/style_tv_38"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginTop="16dp"
                            android:text="花果山农场1号土地" />

                        <TextView
                            android:id="@+id/tv_unit"
                            style="@style/style_tv_68"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:layout_marginTop="15dp"
                            android:text="/㎡/天"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_unit_prive"
                            style="@style/style_tv_price"
                            android:layout_alignBottom="@id/tv_unit"
                            android:layout_toLeftOf="@id/tv_unit"
                            android:text="¥2.5"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_update_date_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_land_name"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginTop="15dp"
                            android:text="更新日期"
                            android:textColor="@color/c_txt_88"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_update_date_valus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_update_date_name"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_update_date_name"
                            android:text="2017-1-8"
                            android:textColor="@color/c_txt_88"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_land_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/tv_update_date_name"
                            android:layout_marginRight="@dimen/right_margin"
                            android:text="150/500㎡"
                            android:textColor="@color/c_txt_88"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_land_size_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/tv_update_date_name"
                            android:layout_marginRight="@dimen/right_margin"
                            android:layout_toLeftOf="@+id/tv_land_size"
                            android:text="库存面积"
                            android:textColor="@color/c_txt_88"
                            android:textSize="11dp" />
                    </RelativeLayout>

                    <View style="@style/split_line_style" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_land_address"
                            style="@style/style_tv_38"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/farm_icon_address2"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="成都市高新区天府二街蜀都中心1号楼138号" />

                        <TextView
                            style="@style/style_tv_38"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:text="距离8KM" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center_vertical"
                            android:background="#c1c1c1" />

                        <ImageView
                            android:id="@+id/iv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/right_margin"
                            android:padding="12dp"
                            android:src="@mipmap/farm_icon_phone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/left_margin">

                        <TextView
                            style="@style/style_tv_25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            android:text="土地说明" />

                        <TextView
                            android:id="@+id/tv_land_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13dp"
                            android:text="适合种植花生，青菜黄瓜，草莓，西瓜，南瓜等等产品土地肥 沃，植物长得快 适合种植花生，青菜黄瓜，草莓，西瓜，南瓜等等" />
                    </LinearLayout>

                    <View style="@style/split_line_style" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/left_margin"
                        android:text="选择种子"
                        android:textColor="@color/c_txt_25"
                        android:textSize="14sp" />

                    <View style="@style/split_line_style" />

                    <android.support.v7.widget.RecyclerView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rv_content"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/ll_crop_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/tv_crop_name"
                                style="@style/style_tv_38"
                                android:layout_marginLeft="@dimen/left_margin"
                                android:layout_marginTop="15dp"
                                android:text=""
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_maturity_cycle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/right_margin"
                                android:layout_marginTop="15dp"
                                android:text="0天"
                                android:textColor="@color/c_txt_38"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/tv_maturity_cycle"
                                android:text="成熟周期："
                                android:textColor="@color/c_txt_38"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <View style="@style/split_line_style" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/left_margin"
                                android:layout_marginRight="@dimen/right_margin"
                                android:text="数量：" />

                            <include
                                android:id="@+id/quantity_area"
                                layout="@layout/layout_quantity_view" />

                            <TextView
                                android:id="@+id/tv_crop_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="㎡" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@id/tv_total_price"
                                style="@style/style_tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="¥ 0.00"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_crop_unit_prive"
                                style="@style/style_tv_68"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/right_margin"
                                android:text="（¥ 0.00/㎡）" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_comment_count"
                            style="@style/style_tv_25"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_weight="1"
                            android:text="评论（154）" />

                        <TextView
                            android:id="@+id/tv_total_conment"
                            style="@style/style_tv_38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/right_margin"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/ic_more"
                            android:text="全部评论" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/btn_bg_color"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <include layout="@layout/layout_easy_status_view" />

    </FrameLayout>
</LinearLayout>
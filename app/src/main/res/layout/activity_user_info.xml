<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_photo"
        android:clickable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_txt_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:textSize="@dimen/text_size_12"
            android:text="头像"/>
        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <com.jobnew.farm.widget.CircleImageView
            android:id="@+id/img_messageHeader"
            android:layout_toLeftOf="@id/img_more"
            android:layout_centerVertical="true"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@mipmap/mine_icon_headportrait"/>

    </RelativeLayout>
    <View style="@style/divider_normal" />
    <RelativeLayout
        android:id="@+id/rl_nike"
        android:clickable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_txt_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:textSize="@dimen/text_size_12"
            android:text="昵称"/>

        <TextView
            android:id="@+id/txt_messageNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未编辑"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12"
            android:drawableRight="@mipmap/ic_more"/>
    </RelativeLayout>
    <View style="@style/divider_normal" />
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_gender"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_txt_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:textSize="@dimen/text_size_12"
            android:text="性别"/>

        <TextView
            android:id="@+id/txt_messageGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12"
            android:drawableRight="@mipmap/ic_more"/>
    </RelativeLayout>
    <View style="@style/divider_normal" />

    <RelativeLayout
        android:id="@+id/rl_date_selection"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:text="我的生日"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/txt_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_more"
            android:text="1990-06-06"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View style="@style/divider_normal" />
    <RelativeLayout
        android:id="@+id/rl_address"
        android:clickable="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_txt_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
            android:textSize="@dimen/text_size_12"
            android:text="所在城市"
            android:id="@+id/textView" />
        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都"
            android:layout_marginRight="13dp"
            android:drawablePadding="5dp"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12"
            android:drawableRight="@mipmap/ic_more"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp" />
    </RelativeLayout>
    <View style="@style/divider_normal"
        android:layout_height="@dimen/margin_10"/>
    <LinearLayout
        android:id="@+id/ll_signature"
        android:clickable="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/c_txt_25"
            android:layout_marginLeft="@dimen/margin_12"
            android:textSize="@dimen/text_size_14"
            android:text="个性签名"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_signature"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_12"
            android:padding="@dimen/margin_10"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="@dimen/margin_12"
            android:textColor="@color/c_txt_68"
            android:text="输入你想要说的话，60个字符以内!"
            android:background="@drawable/bg_color_bg"
            android:layout_height="85dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="match_parent"/>
</LinearLayout>
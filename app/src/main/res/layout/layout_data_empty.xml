<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/empty_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_color"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="80dp"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/data_empty_image"
			android:layout_width="198dp"
			android:layout_height="139dp"
			android:src="@mipmap/public_no_data" />

		<TextView
			android:id="@+id/data_empty_textview_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/data_empty_image"
			android:layout_marginTop="19dp"
			android:gravity="center"
			android:text="当前暂无数据"
			android:textColor="@color/c_txt_88"
			android:textSize="15dp" />

		<TextView
			android:id="@+id/data_empty_textview_hint"
			android:layout_width="90dp"
			android:layout_height="37dp"
			android:layout_below="@+id/data_empty_textview"
			android:layout_marginTop="22dp"
			android:background="@drawable/bg_color_main"
			android:gravity="center"
			android:text="刷新"
			android:textColor="@color/main_color" />

		<Button
			android:id="@+id/btn_layout_data_empty_confim"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="12dp"
			android:paddingLeft="42dp"
			android:paddingRight="42dp"
			android:paddingTop="12dp"
			android:text=""
			android:textColor="@color/white"
			android:textSize="16dp"
			android:visibility="gone" />

	</LinearLayout>

</LinearLayout>
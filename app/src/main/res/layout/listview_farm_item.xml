<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="102dp">
<LinearLayout
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/farmlistview_item_layout"
    android:layout_width="match_parent"
    android:layout_height="101dp">

<ImageView
    android:layout_width="81dp"
    android:layout_height="81dp"
    android:id="@+id/farmlistview_item_img"
    android:scaleType="centerCrop"
    android:src="@drawable/farm_picture"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/farm_nametv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="阳光农场"
                android:textColor="#383938"
                android:textSize="@dimen/text_size_16" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="15dp"
                android:src="@mipmap/public_tab_farm2"
                android:id="@+id/img_main_business"
                android:layout_height="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.jobnew.farm.utils.StarLinearLayout xmlns:star="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/star_score"
                    android:layout_width="62dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    star:isEdit="false"
                    star:margin="3"
                    star:score="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1￥/㎡/月"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/farm_icon_address1" />

            <TextView
                android:id="@+id/farmAdreestv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#686868"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="成都市高新区天赋二街蜀都中心1号楼138号"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storeTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="库存 600"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/discussTv"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#888888"
                android:text="评论 230"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/distanceTv"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#888888"
                android:text="距离 8KM"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#e3e3e3"
        android:layout_height="1dp"/>
</LinearLayout>
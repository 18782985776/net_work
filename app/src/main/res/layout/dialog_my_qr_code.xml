<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp">
    <LinearLayout
        android:layout_width="300dp"
        android:background="@drawable/bg_white_mine"
        android:orientation="vertical"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <com.jobnew.farm.widget.CircleImageView
                android:id="@+id/img_title"
                android:layout_width="60dp"
                android:src="@mipmap/mine_icon_headportrait"
                android:layout_height="60dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:text="未编辑"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_16"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/txt_name"
                    android:layout_width="15dp"
                    android:src="@mipmap/mine_man"
                    android:layout_marginLeft="10dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_marginTop="12dp"
                    android:text="四川 成都"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/c_txt_68"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="200dp"
                android:background="@drawable/bg_white"
                android:layout_centerInParent="true"
                android:layout_height="200dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
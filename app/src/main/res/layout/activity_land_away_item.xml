<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="55dp">
    <com.jobnew.farm.widget.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="41dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/mine_icon_headportrait"
        android:layout_marginRight="10dp"
        android:layout_height="41dp" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_toRightOf="@+id/img_head"
        android:layout_alignTop="@+id/img_head"
        android:layout_width="wrap_content"
        android:text="关键词"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/c_txt_25"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/mine_man"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/txt_name"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/img_head"
        android:layout_alignBottom="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="哈哈哈哈哈哈哈哈哈哈哈"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/c_txt_68"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_check"
        android:layout_width="14dp"
        android:src="@mipmap/ic_cb_nocheck"
        android:layout_marginRight="21dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="14dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_farm"
        android:clickable="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_farm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_12"
             />
        <TextView
            android:id="@+id/txt_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/img_farm"
            android:text="智慧农场"
            android:textColor="@color/c_txt_25"
            android:textSize="@dimen/text_size_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/txt_farm_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mine_icon_contact"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_12"
            android:text="待收货"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>
    <View style="@style/divider_normal" />
    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/order_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间 : 2017-3-12"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_alignTop="@+id/order_item_total"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/order_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="(含运费 : ￥10)"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12" />
        <TextView
            android:id="@+id/order_item_price"
            android:layout_toLeftOf="@+id/order_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="￥.."
            android:textColor="@color/other_red"
            android:textSize="@dimen/text_size_18" />
        <TextView
            android:layout_toLeftOf="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="合计:"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>
    <View style="@style/divider_normal" />
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="36dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_delete_order_one"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:text="删除订单"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:background="@drawable/bg_color_bg"
            android:layout_height="21dp" />
        <TextView
            android:id="@+id/txt_payment"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_main"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="36dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_check_logistics_one"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:text="查看物流"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:background="@drawable/bg_color_bg"
            android:layout_height="21dp" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="36dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_check_logistics_two"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:text="查看物流"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:background="@drawable/bg_color_bg"
            android:layout_height="21dp" />
        <TextView
            android:id="@+id/txt_confirm_goods"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:text="确认收货"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:background="@drawable/bg_color_main"
            android:layout_height="21dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_4"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_after_sales"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="售后退换"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/txt_check_logistics_three"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/txt_delete_order_two"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/txt_evaluation"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_main"
            android:clickable="true"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="36dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_delete_order_three"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/bg_color_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>
    <View style="@style/divider_large" />
</LinearLayout>
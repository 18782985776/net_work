<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jobnew.farm.module.home.activity.MatchInfoActivity">
   <include layout="@layout/layout_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="比赛名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/match_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="开心农场50人种植大赛"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="举办方"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/openner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="大白菜宫"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/one_dp_split_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="比赛地址"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="成都市武侯区天府二街"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/address_tv"
                    android:src="@mipmap/farm_icon_address1" />
            </RelativeLayout>

            <View style="@style/one_dp_split_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="报名时间"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/join_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2017-04-18 至 2017-05-31"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/one_dp_split_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="比赛时间"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/match_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2017-04-18 至 2017-05-31"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/one_dp_split_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="比赛人数"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/match_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="35/50"
                    android:textColor="@color/c_txt_68"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/one_dp_split_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="联系方式"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/message_img"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:padding="8dp"
                        android:src="@mipmap/public_tab_community2" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/line_color" />

                    <ImageView
                        android:id="@+id/phone_img"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:padding="8dp"
                        android:src="@mipmap/farm_icon_phone" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="比赛奖励"
                android:textColor="@color/c_txt_25"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
             android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="1dp"
                android:background="@color/line_color" />
            <TextView
                android:id="@+id/award_tv"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="start|center_vertical"
                android:maxLines="4"
                android:lineSpacingExtra="14dp"
                android:ellipsize="end"
                android:text="第 1 名：现金5000元
第 2 名：现金4000元
第 3 名：现金3000元
第 4 名：现金50元"
                android:textColor="@color/c_txt_68"
                android:textSize="@dimen/text_size_13"
                android:layout_height="115dp" />
            <View
                android:layout_width="match_parent"
                android:background="@color/line_color"
                android:layout_height="@dimen/dp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="比赛详情"
                android:textColor="@color/c_txt_25"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="1dp"
                android:background="@color/line_color" />
            <TextView
                android:id="@+id/match_details_tv"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="start|center_vertical"
                android:maxLines="3"
                android:lineSpacingExtra="14dp"
                android:ellipsize="end"
                android:text="这里是比赛规则，关于比赛的详细说明等。这里是比赛规则， 关于比赛的详细说明等。这里是比赛规则，关于比赛的详细说 明等。"
                android:textColor="@color/c_txt_68"
                android:textSize="@dimen/text_size_13"
                android:layout_height="85dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color"/>
            <TextView
                android:layout_width="match_parent"               android:text="相关图片"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/c_txt_25"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:layout_height="45dp" />
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:id="@+id/match_recycleView"
       android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/join"
        android:text="报名"
        android:background="@color/main_color"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:layout_height="45dp" />

</LinearLayout>

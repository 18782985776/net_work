<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.jobnew.farm.module.home.activity.EntertainmentDetailsActivity">
    <include layout="@layout/layout_title_bar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            app:canLoop="true"></com.bigkoo.convenientbanner.ConvenientBanner>

        <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_height="71dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_14"
        android:id="@+id/entertainment_nametv"
        android:text="五一假期前往三岔湖户外活动"
        android:gravity="center_vertical"
        android:textColor="@color/c_txt_38"
        android:layout_height="0dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
         android:gravity="center_vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="人数"
            android:id="@+id/p"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_11"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/num_tv"
            android:text="15/20"
            android:textColor="@color/c_txt_88"
            android:textSize="@dimen/text_size_11"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/p"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:text="日期 2017-5-1 至2017-5-3"
            android:textSize="@dimen/text_size_11"
            android:gravity="center_vertical"
            android:id="@+id/date_tv"
            android:textColor="@color/c_txt_88"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="71dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="0dp">
    <View
        android:layout_width="4dp"
        android:background="@color/main_color"
        android:layout_height="14dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="活动地址"
        android:textColor="@color/c_txt_25"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="8dp"
                    android:background="@mipmap/farm_icon_address2"
                    android:layout_height="11dp" />
                <TextView
                    android:layout_width="240dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_txt_38"
                    android:id="@+id/address_tv"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginLeft="5dp"
                    android:text="成都市高新区天府二街蜀都中心1号楼138号"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"/>
                <View
                    android:layout_marginLeft="20dp"
                    android:layout_width="1dp"
                    android:background="@color/line_color"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="距离 8KM"
                    android:textColor="@color/c_txt_38"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>
<View
    style="@style/one_dp_split_line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
           android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_height="46dp">
            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="14dp"
                android:background="@color/main_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="活动费用"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/c_txt_25"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="￥"
                android:textColor="@color/c_txt_F8"
                android:textSize="@dimen/text_size_11"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="50.00"
                android:id="@+id/price_tv"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/c_txt_F8"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/one_dp_split_line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="76dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="0dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="14dp"
                    android:background="@color/main_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="活动发起人"
                    android:textColor="@color/c_txt_25"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <com.jobnew.farm.widget.RundImageView
                    android:layout_width="28dp"
                    android:id="@+id/head_img"
                    android:background="@drawable/ic_launcher"
                    android:layout_height="28dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="关键词"
                    android:id="@+id/tv_farm_name"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="30dp"
                    android:padding="7dp"
                    android:src="@mipmap/mine_icon_contact"
                    android:id="@+id/conversation_img"
                    android:layout_height="30dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/main_color"/>
                <ImageView
                    android:layout_width="30dp"
                    android:padding="7dp"
                    android:id="@+id/phone_img"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/farm_icon_phone"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/one_dp_split_line_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_height="101dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <View
                    android:layout_width="4dp"
                    android:background="@color/main_color"
                    android:layout_height="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="活动详情"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/c_txt_25"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/tv_activity_intro"
                android:textColor="@color/c_txt_88"
                android:gravity="start"
                android:text="晚上6点开始篝火晚会哦，记得准时参加哦，记得哦！！！晚 上6点开始篝火晚会哦，记得准时参加哦，记得哦！！！"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="46dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="留言 "
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/c_txt_25"
                android:gravity="center_horizontal|right"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="(3)"
                android:id="@+id/tv_leave_message_num"
                android:gravity="center_vertical"
                android:textColor="@color/c_txt_25"
                android:textSize="@dimen/text_size_14"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="31dp"
                android:padding="8dp"
                android:id="@+id/img_add_message"
               android:src="@mipmap/mine_icon_add_to_2"
                android:layout_height="31dp" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="我要报名"
        android:id="@+id/bt_join"
        android:background="@color/btn_bg_color"
        android:textColor="@color/white"
        />
</LinearLayout>
